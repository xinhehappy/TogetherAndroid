<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <ImageView  
	    android:id="@+id/iv_sns4a_picture"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/guide05"
        android:contentDescription="@string/guide"
        android:scaleType="fitXY"/>

    <RelativeLayout
            android:id="@+id/guide_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="300dip"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_startapp"
                android:layout_width="150dip"
                android:layout_height="40.0dip"
                android:layout_alignParentRight="true"
                android:background="@color/blue"
                android:gravity="center"
                android:text="@string/startapp"
                android:textColor="#FFFFFF"
                android:textSize="16.0sp" />

        </RelativeLayout>

</RelativeLayout>