<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@color/blue"
    android:paddingLeft="5dip"
    android:paddingRight="5dip" >

    <Button
        android:id="@+id/aboutus_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_margin="5dip"
            android:background="@drawable/editimage_back_f"
            android:paddingLeft="5dip"
        android:text="@string/back"
        android:textColor="@color/white"/>
    
    <Button
        android:id="@+id/btn_friendloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/aboutus_btn_back"
        android:layout_centerVertical="true"
        android:background="@drawable/location_icon"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/txt_vb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerInParent="true"
        android:text="详细资料"
        android:textColor="@color/white"
        android:textSize="25sp" />
    
    <Button
        android:id="@+id/btn_delfriend"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="删除好友"
        android:background="@drawable/editimage_done_f"
        android:textColor="@color/white"/>

</RelativeLayout>