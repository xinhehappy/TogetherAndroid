    android:layout_height="fill_parent"
  >

    <include
        android:id="@+id/title_bar_addfriend"
        layout="@layout/title_bar_addfriend" />

    <RelativeLayout
        android:id="@+id/addfriend_rl1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar_addfriend" >

        <include
            android:id="@+id/search_bar"
            layout="@layout/search_bar" />

        <ListView
            android:id="@+id/lv_add_searchresult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_bar" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>